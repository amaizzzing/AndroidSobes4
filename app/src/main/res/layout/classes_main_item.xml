<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners"
    android:layout_margin="@dimen/margin_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_skype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skype_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_corners_skype"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_skype"
        app:layout_constraintEnd_toEndOf="parent">
        <com.amaizzzing.sobes4.ui.customview.VerticalTextView
            android:id="@+id/open_skype_text"
            android:gravity="top"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_10"
            android:text="@string/open_in_skype"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/skype_camera_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/skype_camera_image"
            android:layout_width="@dimen/skype_camera_image_size"
            android:layout_height="@dimen/skype_camera_image_size"
            android:src="@drawable/camera_img"
            android:layout_marginTop="@dimen/margin_4"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/open_skype_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_classes_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <FrameLayout
        android:id="@+id/back_image_class"
        android:layout_width="@dimen/image_class_layout_size"
        android:layout_height="@dimen/image_class_layout_size"
        android:background="@drawable/round_corners_time_item"
        app:layout_constraintStart_toStartOf="@id/guideline_classes_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/image_class"
            android:layout_gravity="center"
            android:layout_width="@dimen/image_class_size"
            android:layout_height="@dimen/image_class_size"/>
    </FrameLayout>

    <TextView
        android:id="@+id/name_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_14"
        android:layout_marginTop="@dimen/margin_4"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/back_image_class"
        app:layout_constraintTop_toTopOf="@+id/back_image_class"/>
    <TextView
        android:id="@+id/schedule_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_14"
        android:textColor="@color/white_80"
        app:layout_constraintStart_toEndOf="@+id/back_image_class"
        app:layout_constraintTop_toBottomOf="@+id/name_class"/>
</androidx.constraintlayout.widget.ConstraintLayout>