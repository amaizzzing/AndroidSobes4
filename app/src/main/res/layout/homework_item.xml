<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners"
    android:layout_margin="4dp"
    android:paddingBottom="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>
    <FrameLayout
        android:id="@+id/back_image_class"
        android:layout_width="@dimen/image_class_layout_size"
        android:layout_height="@dimen/image_class_layout_size"
        android:layout_marginEnd="@dimen/margin_18"
        android:background="@drawable/round_corners_time_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_image_top">
        <ImageView
            android:id="@+id/classes_image"
            android:layout_width="@dimen/image_class_size"
            android:layout_height="@dimen/image_class_size"
            android:layout_gravity="center"/>
    </FrameLayout>
    <TextView
        android:id="@+id/homework_classes_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/back_image_class"
        app:layout_constraintTop_toTopOf="@+id/guideline_image_top"/>
    <TextView
        android:id="@+id/homework_classes_expire_date"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white_80"
        android:layout_marginStart="@dimen/margin_25"
        app:layout_goneMarginTop="@dimen/margin_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/back_image_class"
        app:layout_constraintTop_toBottomOf="@+id/homework_classes_name"/>
    <TextView
        android:id="@+id/homework_classes_description"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="@dimen/margin_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homework_classes_expire_date"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>